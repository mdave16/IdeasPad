<h1>Listing Ideas</h1>
<%= link_to 'New Idea', new_idea_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @ideas.each do |idea| %>
    <tr>
      <td>
        <%= idea.title %>
      </td>
      <td>
        <%= idea.text %>
      </td>
      <td>
        <%= link_to 'Show', idea_path(idea) %>
      </td>
      <td>
        <%= link_to 'Edit', idea_path(idea), method: :delete, data: {confirm: 'Are you sure?' } %>
      </td>
      <td>
        <%= link_to 'Destroy', edit_idea_path(idea) %>
      </td>
    </tr>
  <% end %>
</table>
